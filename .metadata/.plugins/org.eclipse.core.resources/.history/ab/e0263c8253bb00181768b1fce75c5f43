package view;

import java.awt.Dimension;

import javax.swing.JLabel;
import javax.swing.JPanel;

// The MessageView is responsible for informing the players who's turn it is and what they should do next, if they dont know.
public class MessageView {
	private JPanel messagePanel;
	private JLabel messageLabel;

	public int viewWidth;
	public int viewHeight;

	MessageView(int viewWidth, int viewHeight) {
		this.viewWidth = viewWidth;
		this.viewHeight = viewHeight;

		// create new JPanel and add a Label to it, where we can display the messages
				messagePanel = new JPanel();
				Dimension messagePanelDimension = new Dimension(viewWidth, viewHeight);
				messagePanel.setPreferredSize(messagePanelDimension);
				messagePanel.setMaximumSize(messagePanelDimension);
				
				messageLabel = new JLabel("message");
				
	}
// WIP NOTE: viewWidth should be screenWidth, height should be like 80
	public JPanel getMessageView(int viewWidth, int viewHeight) {
		

		return messagePanel;
	}
	
	

}
